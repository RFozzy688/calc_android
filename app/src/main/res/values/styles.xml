<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calc_btn">
        <item name="android:textColor">@color/calc_result_fg</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="calc_btn_action" parent="calc_btn">
        <item name="android:background">@drawable/rounded_action_button</item>
    </style>

    <style name="calc_btn_digit" parent="calc_btn">
        <item name="android:background">@drawable/rounded_digit_button</item>
    </style>

    <style name="calc_btn_equals" parent="calc_btn">
        <item name="android:background">@drawable/rounded_equals_button</item>
    </style>
</resources>